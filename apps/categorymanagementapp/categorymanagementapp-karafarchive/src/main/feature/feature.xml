<?xml version="1.0" encoding="UTF-8"?>
<features name="platform-training-categorymanagementapp-modules-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.4.0">
	<!-- Added necessary modules repositories here -->
	<!-- Example for UAM, variable is defined in pom 
		<repository>mvn:io.digitaljourney.platform.plugins.modules/uam-karafarchive/${platform.plugins.modules.uam.version}/xml/features</repository>
	-->
	<feature name="categorymanagementapp-api" description="CategoryManagementApp API" version="${project.version}" install="manual">
		<feature>base-ws-rs</feature>
		<feature>productmanagement-api</feature>
	
		<bundle>mvn:io.digitaljourney.platform.plugins.apps/categorymanagementapp-api/${project.version}</bundle>
	</feature>
	
	<feature name="categorymanagementapp-common-modules" description="CategoryManagementApp Common Modules" version="${project.version}" install="manual">
		<feature>standard-cxf-jaxrs-swagger</feature>
		<feature>standard-groovy</feature>
		<feature>standard-mapstruct</feature>
		<feature>rsprovider</feature>
		<feature>categorymanagementapp-api</feature>

		<!-- Facade configurations -->
		<config name="platform.plugins.apps.categorymanagementapp.facade"></config>
		
		<bundle>mvn:io.digitaljourney.platform.plugins.apps/categorymanagementapp-common/${project.version}</bundle>
	</feature>
	
	
	<feature name="categorymanagementapp-agents-core" description="CategoryManagementApp Core Agent" version="${project.version}" install="manual">
		<feature>categorymanagementapp-common-modules</feature>
		
		<config name="platform.plugins.apps.categorymanagementapp.agent.core"><![CDATA[#
		]]></config>
		
		<bundle>mvn:io.digitaljourney.platform.plugins.apps/categorymanagementapp-agents-core/${project.version}</bundle>
	</feature>


	<feature name="categorymanagementapp-cxf-modules" description="CategoryManagementApp CXF Modules" version="${project.version}" install="manual">
		<feature>categorymanagementapp-common-modules</feature>
		<feature>categorymanagementapp-agents-core</feature>
		<bundle>mvn:io.digitaljourney.platform.plugins.apps/categorymanagementapp-cxf/${project.version}</bundle>
	</feature>

	<feature name="categorymanagementapp-sling-data" description="CategoryManagementApp Sling Data" version="${project.version}" install="manual">
		<feature>sling</feature>
		<bundle>mvn:io.digitaljourney.platform.plugins.apps/categorymanagementapp-cms/${project.version}</bundle>
	</feature>

	<feature name="categorymanagementapp-mvc-modules" description="CategoryManagementApp MVC Modules" version="${project.version}"  install="manual">
		<feature>categorymanagementapp-common-modules</feature>
		<feature>cms-mvc</feature>
		<feature>categorymanagementapp-agents-core</feature>

		<bundle>mvn:io.digitaljourney.platform.plugins.apps/categorymanagementapp-app/${project.version}</bundle>
		<feature>categorymanagementapp-sling-data</feature>
	</feature>
	
	<feature name="categorymanagementapp" description="CategoryManagementApp" version="${project.version}">
		<feature>categorymanagementapp-mvc-modules</feature>
	</feature>
</features>
